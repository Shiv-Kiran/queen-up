{
  "name": "queen-puzzle",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --max-warnings=0",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "prisma:generate": "prisma generate",
    "prisma:generate:postgres": "prisma generate --schema prisma/schema.postgres.prisma",
    "db:init:base": "prisma db execute --schema prisma/schema.prisma --file prisma/migrations/0001_init/migration.sql",
    "db:upgrade:solution-hash": "tsx scripts/db-upgrade-solution-hash.ts",
    "db:init": "npm run db:init:base && npm run db:upgrade:solution-hash",
    "db:push:postgres": "prisma db push --schema prisma/schema.postgres.prisma",
    "prisma:studio": "prisma studio",
    "puzzles:generate:initial": "tsx scripts/generate-initial-puzzles.ts",
    "puzzles:generate:daily": "tsx scripts/generate-daily-puzzle.ts",
    "puzzles:ensure:initial": "tsx scripts/ensure-initial-puzzles.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "next": "16.1.6",
    "react": "19.2.3",
    "react-dom": "19.2.3"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "prisma": "^5.22.0",
    "tailwindcss": "^4",
    "tsx": "^4.21.0",
    "typescript": "^5",
    "vitest": "^4.0.18"
  }
}
